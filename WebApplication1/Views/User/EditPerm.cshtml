@model BusinessLayer.StringObject

@{
    ViewBag.Title = "Ustawienia dostępu";
}
<h3>Zmiana ustawienia dostępu do projektu użytkownikowi @Model.Object</h3>
@using (Html.BeginForm("EditPerm", "User", new { UserId = Model.Object, ProjectId = ViewBag.ProjectId },  FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="editor-field">
            &nbsp;
            @Html.DropDownList("Permission", new List<SelectListItem>
            {
                new SelectListItem{ Text = "Pracownik", Value = "0"},
                new SelectListItem{ Text = "Zarządca", Value = "1"},

            }, "Wybierz Uprawnienia"
            )
        </div>
        <br/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót zespołu projektu", "UsersInProject", "Project", new { id = ViewBag.ProjectId }, null)
</div>
